<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
    Base application theme.
    This is now a permanent Dark Theme. The parent is changed to remove DayNight switching.
    -->
    <style name="Theme.HomeFarmerApp" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color (Light Green for Dark Theme) -->
        <item name="colorPrimary">@color/green_light</item>
        <item name="colorPrimaryVariant">@color/green_light</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_light</item>
        <item name="colorSecondaryVariant">@color/green_light</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black_dark</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/black_dark</item>
        <item name="colorSurface">@color/black_dark</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
    </style>
</resources>